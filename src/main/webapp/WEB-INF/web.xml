<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>

    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/hello-first-servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/hello-second-servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ThirdServlet</servlet-name>
        <url-pattern>/hello-third-servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FourthServlet</servlet-name>
        <url-pattern>/hello-fourth-servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SessionServlet</servlet-name>
        <url-pattern>/session-servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ShopServlet</servlet-name>
        <url-pattern>/shop-servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SetCookiesServlet</servlet-name>
        <servlet-class>CookiesServlets.SetCookiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetCookiesServlet</servlet-name>
        <url-pattern>/set-cookies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetCookiesServlet</servlet-name>
        <servlet-class>CookiesServlets.GetCookiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCookiesServlet</servlet-name>
        <url-pattern>/get-cookies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCookiesServlet</servlet-name>
        <servlet-class>CookiesServlets.DeleteCookiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCookiesServlet</servlet-name>
        <url-pattern>/delete-cookies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyJSP</servlet-name>
        <jsp-file>/MyJSP.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyJSP</servlet-name>
        <url-pattern>/hello-my-jsp</url-pattern>
    </servlet-mapping>

</web-app>